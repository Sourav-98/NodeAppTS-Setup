{
  "name": "nodeappts-setup",
  "version": "1.0.0",
  "description": "a nodejs app configured with ts",
  "main": "dist/app.js",
  "scripts": {
    "build:tsc": "tsc",
    "build:babel" : "babel dist/src --out-dir build",
    "build:final" : "npm run build:tsc && npm run build:babel",
    "dev": "npm run build:final && nodemon build/app.js",
    "start": "node build/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sourav-98/NodeAppTS-Setup.git"
  },
  "keywords": [
    "NodeJS",
    "TS"
  ],
  "author": "SRC Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sourav-98/NodeAppTS-Setup/issues"
  },
  "homepage": "https://github.com/Sourav-98/NodeAppTS-Setup#readme",
  "dependencies": {
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@types/express": "^4.17.13",
    "babel-plugin-module-resolver": "^4.1.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  }
}
